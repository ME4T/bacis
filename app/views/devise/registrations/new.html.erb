<div class="container box sign-up registration">
  <div class="row">


    <section class="col-lg-6 hero-unit">

      <h1 class="">Sign up</h1>
      <p>Already have an account? <a href="/users/sign_in">Sign in!</a></p>
      
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "new_user", :role => "form"} ) do |f| %>

        <div class="errors">
          <%= devise_error_messages! %>
        </div>

        <div class=" form-group">
          <%= f.label :email, class: "control-label" %>
          <div>
            <%= f.email_field :email, class: "form-control required", placeholder: "Enter Email" %>
          </div>
        </div>
        <div class=" form-group">
          <%= f.label :username, class: "control-label" %>
          <div>
            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
          </div>
        </div>

        <div class=" form-group">
          <%= f.label :password, class: "control-label" %>
          <div>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        <div class=" form-group">
          <%= f.label :password_confirmation, class: "control-label" %>
          <div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
          </div>
        </div>





        <div class="">
        <p>By signing up, you agree to our <a href="/terms">terms of use</a></p>
          <%= f.submit "Sign up", class: "btn btn-large btn-primary"%>
        </div>

      <% end %>
    </section>
  </div>
</div>




