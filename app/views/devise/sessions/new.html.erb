<div class="hero-unit container box registration">
	<div class="row">


		<section class="col-lg-6">

			<h1 class="col-md-12">Sign up</h1>
			
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "new_user", :role => "form"} ) do |f| %>
				<%= devise_error_messages! %>




				<div class="col-md-12 form-group">
					<%= f.label :name, class: "control-label" %>
					<div>
						<%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
					</div>
				</div>

				<div class="col-md-12 form-group">
					<%= f.label :email, class: "control-label" %>
					<div>
						<%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
					</div>
				</div>


				<div class="col-md-12 form-group">
					<%= f.label :location, class: "control-label" %>
					<div>
						<%= f.text_field :address, class: "form-control address", placeholder: "Enter Address" %>
					</div>
				</div>

				<div class="col-md-12 form-group">
					<%= f.label :password, class: "control-label" %>
					<div>
						<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
					</div>
				</div>
				<div class="col-md-12 form-group">
					<%= f.label :password_confirmation, class: "control-label" %>
					<div>
						<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
					</div>
				</div>

				<div class="col-md-12">
				<p>By signing up, you agree to our <a href="/terms">terms of use</a></p>
					<%= f.submit "Sign up", class: "btn btn-large btn-primary"%>
				</div>

			<% end %>
		</section>


		<section class="col-lg-6">
			<h1 class="col-md-12">Sign in</h1>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "new_user", :role => "form"}) do |f| %>
				<div class="col-md-12 form-group">
					<%= f.label :email, class: "control-label" %>
					<div>
						<%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
					</div>
				</div>
				<div class="col-md-12 form-group">
					<%= f.label :password, class: "control-label" %>
					<div>
						<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
					</div>
				</div>
				<div class="col-md-12 form-group">
					<% if devise_mapping.rememberable? -%>
						<%= f.check_box :remember_me %> <%= f.label :remember_me %>
					<% end -%>
				</div>

				<div class="col-md-12">
					<%= f.submit "Sign in" , class: "btn btn-large btn-primary"%>
				</div>

			<% end %>
			
			<div class="col-md-12">
				<%= render "devise/shared/links" %>
			</div>
		</section>





	</div>








</div>