<div class=" container  ">
	
	<div class="row">
		<% flash.each do |name, msg| %>
            <%= content_tag :div, msg, id: "flash_#{name}", class: "alert col-md-6" %>
        <% end %>
	</div>


	<div class="row">
		<section class="col-lg-6 box hero-unit sign-in">
			<h1 class="">Sign in</h1>
			<p>Don't have an account? <a href="/users/sign_up">Register Here!</a></p>
			<p class="errors"><%= flash[:alert] %></p>


			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "new_user", :role => "form"}) do |f| %>
				
				<div class=" form-group">

					<%= f.label :login, class: "control-label" %>
					<div>
						<%= f.text_field :login, class: "form-control", placeholder: "Email or Username" %>
					</div>
				</div>
				<div class=" form-group">
					<%= f.label :password, class: "control-label" %>
					<div>
						<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
					</div>
				</div>
				<div class=" form-group">
					<% if devise_mapping.rememberable? -%>
						<%= f.check_box :remember_me %> <%= f.label :remember_me %>
					<% end -%>
				</div>

				<div class="">
					<%= f.submit "Sign in" , class: "btn btn-large btn-primary"%>
				</div>

			<% end %>
			
			<div class="">

				<%= render "devise/shared/links" %>
			</div>
		</section>





	</div>








</div>