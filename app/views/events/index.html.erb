<div class="container event-list">

	<h1>Events</h1>

	<div class="row">

		<%= form_for @filterrific do |f| %>



		<div class="form-group">
		  <div class="form-group-inner">
			  <%= f.label "Search", class: "control-label col-md-1" %>
			  <div class="col-md-2">
			      <%= f.text_field :search_query, {:class => 'form-control col-md-3 filterrific-periodically-observed'} %>
			  </div>
		  </div>

		</div>


		<div class="form-group">
		  <div class="form-group-inner">
			<%= f.label "Game", class: "control-label col-md-1" %>
			<div class="col-md-2">
			    <%= 
			    f.select(
			      :with_game_id,
			      @filterrific.select_options[:with_game_id],
			      { include_blank: '- Any -' }
			    ) %>
			    <%# See below for the Country.options_for_select presenter method %>
			  </div>
			</div>
		</div>
		<div class="form-group">
		  <div class="form-group-inner">
			<%= f.label "Event Type", class: "control-label col-md-1" %>
			<div class="col-md-2">
			    <%= 
			    f.select(
			      :with_event_type_id,
			      @filterrific.select_options[:with_event_type_id],
			      { include_blank: '- Any -' }
			    ) %>
			    <%# See below for the Country.options_for_select presenter method %>
			  </div>
			</div>
		</div>
		<div class="form-group">
		  <div class="form-group-inner">
			<%= f.label "Sort", class: "control-label col-md-1" %>
			<div class="col-md-2">
				<%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
			 </div>
		  </div>
		</div>



		<%= render_filterrific_spinner %>
	  <% end %>



	</div>


	<%= render(
	  partial: 'events/listing',
	  locals: { events: @events }
	) %>

</div>