<div class='container hero-unit'>
    <div class="row">
        <div class="col-md-10 col-md-offset-2">
            <h1>Edit Profile</h1>
        </div>


        <% if current_user != nil && current_user.id == @user.id %>
            <div class="col-md-12">

                <%= form_for(@user, :html => {:class => "edit_user form-horizontal", :role => "form"}) do |f| %>



                    <div class="form-group">
                        <%= f.label :name, class: "control-label col-md-2" %>
                        <div class="col-md-6">
                            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                        </div>
                    </div>






                    <div class="form-group">
                        <%= f.label :address, "Location", class: "control-label col-md-2" %>
                        <div class="col-md-6">
                            <%= f.text_field :address, class: "form-control", placeholder: "street, city, state or street, zip code" %>
                        </div>
                    </div>






                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <%= f.submit 'Update Profile' ,   class: "btn btn-large btn-primary" %>
                        </div>
                    </div>

                    


                <% end %>


            </div>

        <% else %>

            <div class="col-md-10 col-md-offset-2">
                <p>You do not have permission to edit this profile</p>
            </div>

        <% end %>

    </div>
</div>




